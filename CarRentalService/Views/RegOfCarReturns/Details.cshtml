@model CarRentalService.Models.RegOfCarReturn

@{
    ViewData["Title"] = "Details";
}

<div class="space-above-1">
    <h1>Car Return - Details</h1>
    <div class="card text-white bg-primary mb-5" style="max-width: 75rem;">
        <div class ="card-body">
            <h4>Payment</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    <p>BOOKING NUMBER</p>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BookingNumber)
                </dd>
                <dt class="col-sm-2">
                    <p>CAR CATEGORY</p>
                </dt>
                <dd class="col-sm-10">
                    @ViewBag.CarCategory
                </dd>
                <dt class="col-sm-2">
                    <p>CAR RENTED</p>
                </dt>
                <dd class="col-sm-10">
                    @ViewBag.RentStartDate
                </dd>
                <dt class="col-sm-2">
                    <p>CAR RETURNED</p>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateOfReturn)
                </dd>
                <dt class="col-sm-2">
                    <p>DAYS RENTED</p>
                </dt>
                <dd class="col-sm-10">
                    @ViewBag.AmountOfDaysRented
                </dd>
                <hr />

                <h3>Price to pay: @ViewBag.CalculatedPrice kr</h3>
                <br />
            </dl>
            <a asp-action="Index" class="btn btn-outline-success">Pay and return</a>
            <br />
        </div>
    </div>
</div>